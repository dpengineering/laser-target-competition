<InstructionsScreen>:

    name: 'instructions'
    FloatLayout:
        id: float
        size_hint: None, None

    DPEAButton:
        id: transition_target
        text: ""
        size: 142, 50
        x: root.width / 2 - 75
        y: root.height - 50
        color: 0, 0, 0, 1
        on_press: root.transition_to_player_screen()
        font_name: 'PixelFont'
        font_size: '20sp'

    Label:
        text: "BACK"
        center_x: 800 / 16
        y: root.height / 2 - 24
        color: 1, 1, 1, 1
        font_name: 'PixelFont'
        font_size: '55sp'

    DPEAButton:
