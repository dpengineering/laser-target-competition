<InstructionsScreen>:

    name: 'instructions'
    FloatLayout:
        id: float
        size_hint: None, None

    CapitalInput:
        multiline: False
        background_color: 0, 0, 0, 1
        cursor_width: 7
        cursor_color: 1, 1, 1, 1
        foreground_color: 1, 1, 1
        x: root.width / 2 - 100
        y: - 55 * 5
        font_name: 'PixelFont'
        font_size: '55sp'

    DPEAButton:
        id: transition_target
        text: ""
        size: 142, 50
        x: root.width / 2 - 75
        y: root.height - 50
        color: 0, 0, 0, 1
        on_press: root.transition_to_player_screen()
        font_name: 'PixelFont'
        font_size: '20sp'

    Label:
        text: "BACK"
        center_x: 800 / 16
        y: root.height / 2 - 24
        color: 1, 1, 1, 1
        font_name: 'PixelFont'
        font_size: '55sp'

    DPEAButton:
        id: transition_target
        text: ""
        size: 200, 65
        x: root.width / 2 - 110
        y: root.height / 2 - 100
        color: 0, 0, 0, 1
        on_press: root.transition_to_target_screen()
        font_name: 'PixelFont'
        font_size: '20sp'

    Label:
        id: transition_target_text
        text: "PLAY"
        center_x: 45
        y: -70
        color: 1, 1, 1, 1
        font_name: 'PixelFont'
        font_size: '80sp'


    Label:
