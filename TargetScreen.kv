<TargetScreen>:
    #: import time __main__.time

    name: 'target'
    FloatLayout:
        id: float
        size_hint: None, None


    DPEAButton:
        id: transition
        text: "Back"
        size: 200, 100
        x: 0
        y: 0
        color: 0.65, 0, 0.25, 1
