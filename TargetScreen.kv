<TargetScreen>:
    #: import time __main__.time

    name: 'target'
    FloatLayout:
        id: float
        size_hint: None, None


    DPEAButton:
        id: transition
        text: "Back"
        size: 200, 100
        x: 0
        y: 0
        color: 0.65, 0, 0.25, 1
        on_press: root.transition_to_player_screen()


    DPEAButton:
        id: start
        text: "Start"
        size: 100, 50
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        color: 0, 0.65, 0.25, 1
        on_press: root.start()

    Label:
        id: timer
        text: "Time Left:"
        font_size: 30
        size_hint: None, None
        center_x: root.width * 0.81
        center_y: root.height * 0.97
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0

    Label:
        id: full_timer
        text: "15.0"
        font_size: 30
        size_hint: None, None
        center_x: root.width * 0.94
        center_y: root.height * 0.97
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0




        SelfUpdatingLabel:
            id: time_label
            size_hint: None, None
            font_size: 30
            update_property: root.update_label
            update_property_parameters: None
            center_x: root.width * 1.5
            center_y: root.height * 0.97
            color: 1, 1, 1, 1
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0