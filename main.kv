<PlayerScreen>:

    name: 'player'
    FloatLayout:
        id: float
        size_hint: None, None


    DPEAButton:
        id: left
        text: "Left"
        size: 100, 100
        center_x: root.width * 0.5 - 75
        center_y: root.height * 0.5
        color: 0, 0.65, 0.25, 1
        on_press: root.left_button_pressed()

    DPEAButton:
        id: right
        text: "Right"
        size: 100, 100
        center_x: root.width * 0.5 + 75
        center_y: root.height * 0.5
        color: 0, 0.65, 0.25, 1
        on_press: root.right_button_pressed()

    DPEAButton:
        id: transition
        text: "Targets!"
        size: 200, 100
        x: 0
        y: 0
        color: 0.65, 0, 0.25, 1

        on_press: root.transition_to_target_screen()