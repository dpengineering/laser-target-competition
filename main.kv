<PlayerScreen>:

    name: 'player'
    FloatLayout:
        id: float
        size_hint: None, None

    DPEAButton:
        id: transition
        text: "Play!"
        size: 100, 50
        x: root.width / 2 - 50
        y: root.height - 50
        color: 0.65, 0, 0.25, 1
        on_press: root.transition_to_target_screen()


    ImageButton:
        id: leaderboard
        source: 'assets/images/text/leaderboard.png'
        x: root.width / 2 - 396 / 2
        y: root.height - 44*3
        size: 396, 44


    ImageButton:
        id: score
        source: 'assets/images/text/score.png'
        x: root.width / 2 + 120
        y: root.height - 44 * 4
        size: 180, 44


    ImageButton:
        id: rank
        source: 'assets/images/text/rank.png'
        x: 44
        y: root.height - 44 *4
        size: 144, 44


    ImageButton:
        id: name
        source: 'assets/images/text/name.png'
        x: root.width / 2 - 144
        y: root.height - 44 * 4
        size: 144, 44


    ImageButton:
        id: 1st
        source: 'assets/images/text/1st.png'
        x: 88
        y: root.height - 44 * 5
        size: 36, 44

    ImageButton:
        id: 2nd
        source: 'assets/images/text/2nd.png'
        x: 88
        y: root.height - 44 * 6
        size: 36, 44

    ImageButton:
        id: 3rd
        source: 'assets/images/text/3rd.png'
        x: 88
        y: root.height - 44 * 7
        size: 36, 44

    ImageButton:
        id: 4th
        source: 'assets/images/text/4th.png'
        x: 44
        y: root.height - 44 * 8
        size: 108, 44














