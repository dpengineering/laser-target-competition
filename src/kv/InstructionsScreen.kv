<InstructionsScreen>:

    name: 'instructions'
    FloatLayout:
        id: float
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: "TEST"
        size: 200, 65
        center_x: 800 / 8
        y: root.height / 2 - 24
        color: 0.25, 0.25, 0.25, 1
        on_press: root.transition_to_end_screen()
        font_name: 'PixelFont'
        font_size: '20sp'

    DPEAButton:
        id: transition_target
        text: ""
        size: 142, 50
        x: root.width / 2 - 75
        y: root.height - 50
        color: 0, 0, 0, 1
        on_press: root.transition_to_player_screen()
        font_name: 'PixelFont'
        font_size: '20sp'

    Label:
        text: "BACK"
        center_x: 800 / 16
        y: root.height / 2 - 24
        color: 1, 1, 1, 1
        font_name: 'PixelFont'
        font_size: '20sp'

    DPEAButton:
        id: exit
        text: "EXIT"
        size: 200, 65
        x: 0
        y: 0
        color: 0, 1, 1, 1
        on_press: root.exit()
        font_name: 'PixelFont'
        font_size: '20sp'

    DPEAButton:
        id: play_button
